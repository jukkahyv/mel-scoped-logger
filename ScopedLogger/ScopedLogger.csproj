<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Title>Rapal.ScopedLogger</Title>
        <Authors>EG / Rapal Oy</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/jukkahyv/mel-scoped-logger</RepositoryUrl>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <Description>Extends MEL ILogger with context/scope chaining features similar to Serilog.</Description>
        <Version>0.9.0-beta</Version>
        <PackageId>Rapal.ScopedLogger</PackageId>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.1" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\README.md" Pack="true" PackagePath="\" />
    </ItemGroup>    

</Project>
